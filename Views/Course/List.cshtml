@model IEnumerable<Course>

    @{
    ViewData["Title"] = "Course List Page";
}

<h2>Course List</h2>
<a href="/Course/Create" class="btn btn-primary">Add Course</a>
<hr>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:150px;" >@Html.DisplayNameFor(m=> m.CourseId)</th>
            <th >@Html.DisplayNameFor(m=> m.CourseName)</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
      @foreach(var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
            <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
            
            <td>
                <a asp-controller="Course" asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
      }
    </tbody>
    
</table>