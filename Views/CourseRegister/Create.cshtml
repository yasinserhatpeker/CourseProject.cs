@model CourseRegister
@{
    ViewData["Title"] = "Course Register Page";
}

<h2>Register to a Course</h2>
<a href="/Course/List" class="btn btn-danger">Course List</a>
<hr>

<form asp-controller="CourseRegister" asp-action="Create" method="post">
<div class="mb-3">
  <label asp-for="StudentId" class="form-label">Trainee</label>
  <select asp-for ="StudentId"asp-items="ViewBag.Students" class="form-control">
  <option value="">Please Select</option>
  </select>
  
</div>

<div class="mb-3">
  <label asp-for="CourseId" class="form-label">Course</label>
 <select asp-for="CourseId"asp-items="ViewBag.Courses" class="form-control">
     <option value="">Please Select</option>
 </select>
  </div>

 <button class="btn-secondary" style="width: 70px; margin-top:20px;" type="submit" >Save</button>


</form>